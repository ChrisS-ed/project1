<h1>Add gig to database</h1>

<%= form_for @gig do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.label :artist_id %>
    <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
    <br>
    <%= f.label :venue_id %>
    <%= f.collection_select(:venue_id, Venue.all, :id, :name) %>
    <br>
    <%= f.label :ticket_price %>
    <%= f.text_field :ticket_price %>
    <br>
    <%= f.label :tickets_available %>
    <%= f.text_field :tickets_available %>
    <br>
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
    <br>
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
    <br>
    <%= f.submit 'Add gig' %>
  <% end %>
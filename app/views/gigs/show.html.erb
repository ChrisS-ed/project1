<h1><%= @gig.name %></h1>

<p><%= @gig.artist.name %></p>
<p><%= image_tag(@gig.artist.image, alt: 'No image', width: 200) %></p>

<p><%= @gig.description %></p>

<p>Venue: <%= @gig.venue.name %></p>

<% gigtime = DateTime.parse(@gig.start_time) %>
<% gigfinish = DateTime.parse(@gig.end_time) %>
<p>Date: <%= gigtime.strftime("%d/%m/%Y") %></p>
<p>Starts: <%= gigtime.strftime("%H:%M") %></p>
<p>Ends: <%= gigfinish.strftime("%H:%M") %></p>

<p>Ticket price: TO BE ADDED </p>

<p>Seats available for this show: <%= @gig.tickets_available %></p>

<nav>
  <ul>
    <li><%= link_to('Book seats for this gig!', new_gig_booking_path(@gig)) %></li>
  </ul>
</nav>
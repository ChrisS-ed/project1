<div class='list_container'>
  <h1>Artists performing:</h1>

  <% @artists.order(:name).each do |artist| %>
    <p><%= link_to("#{artist.name}", artist_path(artist)) %> 
    <% if can? :create, Artist %> 
      <%= link_to('(Edit)', edit_artist_path(artist)) %>
    <% end %>
    </p>

  <% end %>
</div>
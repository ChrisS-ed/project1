<div class='list_container'>
    <h1>Add artist to database</h1>

    <%= form_for @artist do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <br>
        <%= f.label :image %>
        <%= f.text_field :image %>
        <br>
        <%= f.submit 'Add artist' %>
      <% end %>
  </div>
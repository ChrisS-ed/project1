<h1>Booking Page </h1>

<p>You are booking seats for <%= @gig.name %> at <%= @gig.venue.name %> (<%= @gig.start_time %>)</p>
<% existing_booking = current_user.bookings.find_by(gig_id: @gig.id)%>
<% if existing_booking %>
  <p>*** You currently have <%= existing_booking.seats %> seat(s) booked for this gig ***</p>
<% end %>
<p><%= @gig.tickets_available %> seats are still available for this gig</p>

<%= form_for [@gig, @booking] do |f| %>
    <%= f.label :seats, 'Number of seats required:' %>
    <%= f.text_field :seats %>
    <%= f.hidden_field :gig_id, value: @gig.id %>
    <br>
    <%= f.submit 'Book seats!' %>
<% end %>
